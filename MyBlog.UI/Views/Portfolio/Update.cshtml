@model MyBlog.Core.DTOs.Response.Portfolio.ResponsePortfolio

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<form class="form-group" asp-action="Update" method="post">
    <input class="form-control" asp-for="Id" type="hidden"/>
    <label class="form-control" asp-for="Name">Proje Başlığı</label>
    <input class="form-control" asp-for="Name"/>
    <span asp-validation-for="Name" class="alert-danger"></span>
    <br>
    <label class="form-control" asp-for="ImageUrl">Görsel 1</label>
    <input class="form-control" asp-for="ImageUrl"/>
    <span asp-validation-for="ImageUrl" class="alert-danger"></span>
    <br>
    <label class="form-control" asp-for="ImageUrl2">Görsel 2</label>
    <input class="form-control" asp-for="ImageUrl2"/>
    <span asp-validation-for="ImageUrl2" class="alert-danger"></span>
    <br>
    <label class="form-control" asp-for="ProjectUrl">Proje Url</label>
    <input class="form-control" asp-for="ProjectUrl"/>
    <span asp-validation-for="ProjectUrl" class="alert-danger"></span>
    <br>
    <label class="form-control" asp-for="Price">Fiyat</label>
    <input class="form-control" asp-for="Price"/>
    <span asp-validation-for="Price" class="alert-danger"></span>
    <br>
    <label class="form-control" asp-for="Value">Tamamlanma Oran</label>
    <input class="form-control" asp-for="Value"/>
    <span asp-validation-for="Value" class="alert-danger"></span>
    <br>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
